[32m+[m[32musing namespace std;[m
[32m+[m[32mll n, k, a[1000001];[m
[32m+[m[32mbool check(ll mid)[m
[32m+[m[32m{[m
[32m+[m[32m    ll sum = 0;[m
[32m+[m[32m    ll cnt = 0;[m
[32m+[m[32m    for (ll i = 0; i < n; i++)[m
[32m+[m[32m    {[m
[32m+[m[32m        sum += a[i];[m
[32m+[m[32m        if (sum > mid)[m
[32m+[m[32m        {[m
[32m+[m[32m            cnt++;[m
[32m+[m[32m            sum = a[i];[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m    if (sum > 0)[m
[32m+[m[32m        cnt++;[m
[32m+[m[32m    return cnt <= k;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mint main()[m
[32m+[m[32m{[m
[32m+[m[32m    faster();[m
[32m+[m[32m    ll l = 0, r = 0;[m
[32m+[m[32m    cin >> n >> k;[m
[32m+[m[32m    for (ll i = 0; i < n; i++)[m
[32m+[m[32m    {[m
[32m+[m[32m        cin >> a[i];[m
[32m+[m[32m        l = max(l, a[i]);[m
[32m+[m[32m        r += a[i];[m
[32m+[m[32m    }[m
[32m+[m[32m    ll res = -1;[m
[32m+[m[32m    while (l <= r)[m
[32m+[m[32m    {[m
[32m+[m[32m        ll mid = (l + r) / 2;[m
[32m+[m[32m        if (check(mid))[m
[32m+[m[32m        {[m
[32m+[m[32m            res = mid;[m
[32m+[m[32m            r = mid - 1;[m
[32m+[m[32m        }[m
[32m+[m[32m        else[m
[32m+[m[32m            l = mid + 1;[m
[32m+[m[32m    }[m
[32m+[m[32m    cout << res << endl;[m
